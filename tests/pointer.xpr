func main()
  // A standard record for 2D coordinates.
  type TPoint = record
    x, y: Int32
  end

  // A typed pointer to a 32-bit integer.
  type PInt32 = ^Int32

  var p: TPoint
  p.x := 100
  p.y := 200
  
  // Get the address of the record 'p' and treat it as a pointer to Int32.
  // This allows us to access the record's raw memory layout.
  var ptr: PInt32 = @p
  
  // direct array like access
  print ptr[0]
  print ptr[1]
  
  // manual access
  print ptr^
  ptr += SizeOf(int32)
  print ptr^
end;

main();