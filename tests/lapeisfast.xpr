function main();
  var a: Int64 = 1594;
  var b: Int64 = 0;
  var hits: Int64;

  for(var i:Int64=0; i <= 10 000 000; i:=i+1) do
    b := a
    b := b + a * 2
    b := b - a * 2

    if(a = b) hits := hits + 1;
  end

  print i
  print hits
end;

main();

