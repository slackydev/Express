type TAnimal = class 
  var name: String

  func Create(aName: String)
    self.name := aName
  end
  
  func Speak(): String
    return self.name + ' makes a sound.'
  end
end

type TCat = class(TAnimal)
  func Speak(): String // No 'override' keyword is needed.
    return self.name + ' says Meow!'
  end
end

var myCat := new TCat('Misty')

var myPet: TAnimal = myCat
print myPet.Speak() //; .. says Meow!

// check if it is a cat
if (myPet is TCat) then
  print 'The pet is indeed a cat!'
end

// Clean up
myPet.Free()